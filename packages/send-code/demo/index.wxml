<demo-block title="基础用法">
  <fbm-send-code
    code-disabled="{{ codeDisabled }}"
    bind:select-countycode="onSelectCode"
    bind:send-code="onSendCode"
    bind:input-code="onComplete"
  />
  <fbm-button size="large" round color="#4CAF50" disabled="{{btnDisabled}}" block custom-class="demo-center">登录</fbm-button>
</demo-block>

<demo-block title="自定义属性">
  <fbm-send-code
    phone-county-code="886"
    phone-placeholder="請輸入手機號碼"
    code-label="驗證碼"
    code-disabled="{{ codeDisabled1 }}"
    code-length="5"
    code-placeholder="請輸入驗證碼"
    code-button-color="#6900FF"
    bind:select-countycode="onSelectCode"
    bind:send-code="onSendCode"
    bind:input-code="onComplete"
  />
  <fbm-button size="large" round color="#6900FF" disabled="{{btnDisabled1}}" block custom-class="demo-center">登录</fbm-button>
</demo-block>

<fbm-toast id="fbm-toast" />
