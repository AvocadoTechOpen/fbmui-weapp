<demo-block title="基础用法">
  <fbm-swipe-cell right-width="{{ 65 }}" left-width="{{ 65 }}">
    <view slot="left" class="fbm-swipe-cell__left">选择</view>
    <fbm-cell-group>
      <fbm-cell title="单元格" value="内容" />
    </fbm-cell-group>
    <view slot="right" class="fbm-swipe-cell__right">删除</view>
  </fbm-swipe-cell>
</demo-block>

<demo-block title="异步关闭">
  <fbm-swipe-cell id="swipe-cell" right-width="{{ 65 }}" left-width="{{ 65 }}" async-close bind:close="onClose">
    <view slot="left" class="fbm-swipe-cell__left">选择</view>
    <fbm-cell-group>
      <fbm-cell title="单元格" value="内容" />
    </fbm-cell-group>
    <view slot="right" class="fbm-swipe-cell__right">删除</view>
  </fbm-swipe-cell>
</demo-block>

<demo-block title="主动打开">
  <fbm-swipe-cell id="swipe-cell2" right-width="{{ 65 }}" left-width="{{ 65 }}" name="示例" bind:open="onOpen" >
    <view slot="left" class="fbm-swipe-cell__left">选择</view>
    <fbm-cell-group>
      <fbm-cell title="单元格" value="内容" />
    </fbm-cell-group>
    <view slot="right" class="fbm-swipe-cell__right">删除</view>
  </fbm-swipe-cell>
</demo-block>

<fbm-dialog id="fbm-dialog" />
