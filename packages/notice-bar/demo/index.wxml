<demo-block title="基础用法">
  <fbm-notice-bar
    text="{{ text }}"
    left-icon="volume-o"
  />
</demo-block>

<demo-block title="滚动模式">
  <fbm-notice-bar scrollable text="{{ shortText }}" custom-class="demo-margin-bottom" />
  <fbm-notice-bar scrollable="{{ false }}" text="{{ text }}" custom-class="demo-margin-bottom" />
</demo-block>

<demo-block title="多行展示">
  <fbm-notice-bar wrapable scrollable="{{ false }}" text="{{ text }}" />
</demo-block>

<demo-block title="通知栏模式">
  <fbm-notice-bar mode="closeable" text="{{ shortText }}" />
  <fbm-notice-bar custom-class="margin-top" mode="link" text="{{ shortText }}" />
</demo-block>

<demo-block title="自定义样式">
  <fbm-notice-bar
    text="{{ shortText }}"
    color="#1989fa"
    background="#ecf9ff"
    left-icon="info-o"
  >
  </fbm-notice-bar>
</demo-block>
