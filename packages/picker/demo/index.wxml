<demo-block title="基础用法">
  <fbm-picker
    columns="{{ column1 }}"
    bind:change="onChange1"
  />
</demo-block>

<demo-block title="默认选中项">
  <fbm-picker
    columns="{{ column1 }}"
    default-index="{{ 2 }}"
    bind:change="onChange1"
  />
</demo-block>

<demo-block title="展示顶部栏">
  <fbm-picker
    show-toolbar
    title="标题"
    columns="{{ column1 }}"
    bind:change="onChange1"
    bind:confirm="onConfirm"
    bind:cancel="onCancel"
  />
</demo-block>

<demo-block title="多列联动">
  <fbm-picker
    columns="{{ column4 }}"
    bind:change="onChange2"
  />
</demo-block>

<demo-block title="禁用选项">
  <fbm-picker columns="{{ column2 }}" />
</demo-block>

<demo-block title="加载状态">
  <fbm-picker
    loading
    columns="{{ column4 }}"
  />
</demo-block>

<fbm-toast id="fbm-toast" />
