<demo-block card title="基础用法">
  <fbm-cell is-link title="显示分享面板" data-type="basic" bind:click="onShowShareSheet" />
  <fbm-share-sheet
    show="{{ show.basic }}"
    title="立即分享给好友"
    options="{{ options }}"
    bind:close="onClose"
    bind:select="onSelect"
  />
</demo-block>

