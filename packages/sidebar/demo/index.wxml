<fbm-grid column-num="{{ 2 }}" border="{{ false }}">
  <fbm-grid-item use-slot>
    <h3 class="demo-sidebar-title">基础用法</h3>
    <fbm-sidebar custom-class="custom-sidebar">
      <fbm-sidebar-item title="标签名" />
      <fbm-sidebar-item title="标签名" />
      <fbm-sidebar-item title="标签名" />
    </fbm-sidebar>
  </fbm-grid-item>

  <fbm-grid-item use-slot>
    <h3 class="demo-sidebar-title">徽标提示</h3>
    <fbm-sidebar custom-class="custom-sidebar">
      <fbm-sidebar-item title="标签名" dot />
      <fbm-sidebar-item title="标签名" badge="5" />
      <fbm-sidebar-item title="标签名" badge="99+" />
    </fbm-sidebar>
  </fbm-grid-item>

  <fbm-grid-item use-slot>
    <h3 class="demo-sidebar-title">禁用选项</h3>
    <fbm-sidebar custom-class="custom-sidebar">
      <fbm-sidebar-item title="标签名" />
      <fbm-sidebar-item title="标签名" disabled />
      <fbm-sidebar-item title="标签名" />
    </fbm-sidebar>
  </fbm-grid-item>

  <fbm-grid-item use-slot>
    <h3 class="demo-sidebar-title">监听切换事件</h3>
    <fbm-sidebar custom-class="custom-sidebar" bind:change="onChange">
      <fbm-sidebar-item title="标签名 1" />
      <fbm-sidebar-item title="标签名 2" />
      <fbm-sidebar-item title="标签名 3" />
    </fbm-sidebar>
  </fbm-grid-item>
</fbm-grid>

<fbm-notify id="fbm-notify" />
