<fbm-tabs
  active="{{ active }}"
  color="#1989fa"
  bind:change="onSwitch"
>
  <fbm-tab title="用法示例" custom-class="demo-tab-pane">
    <demo-block title="基础用法">
      <fbm-col
        custom-class="col"
        span="6"
      >
        <van-icon
          name="{{ demoIcon }}"
          size="32px"
          custom-class="icon"
        />
      </fbm-col>
      <fbm-col
        custom-class="col"
        span="6"
      >
        <van-icon
          name="{{ demoImage }}"
          size="32px"
          custom-class="icon"
        />
      </fbm-col>
    </demo-block>
    <demo-block title="提示信息">
      <fbm-col
        custom-class="col"
        span="6"
      >
        <van-icon
          name="{{ demoIcon }}"
          size="32px"
          custom-class="icon"
          dot
        />
      </fbm-col>
      <fbm-col
        custom-class="col"
        span="6"
      >
        <van-icon
          name="{{ demoIcon }}"
          size="32px"
          custom-class="icon"
          info="9"
        />
      </fbm-col>
      <fbm-col
        custom-class="col"
        span="6"
      >
        <van-icon
          name="{{ demoIcon }}"
          size="32px"
          custom-class="icon"
          info="99+"
        />
      </fbm-col>
    </demo-block>
    <demo-block title="图标颜色">
      <fbm-col
        custom-class="col"
        span="6"
      >
        <van-icon
          name="{{ demoIcon }}"
          size="32px"
          custom-class="icon"
          color="#1989fa"
        />
      </fbm-col>
      <fbm-col
        custom-class="col"
        span="6"
      >
        <van-icon
          name="{{ demoIcon }}"
          size="32px"
          custom-class="icon"
          color="#07c160"
        />
      </fbm-col>
    </demo-block>
    <demo-block title="图标大小">
      <fbm-col
        custom-class="col"
        span="6"
      >
        <van-icon
          name="{{ demoIcon }}"
          size="40"
          custom-class="icon"
        />
      </fbm-col>
      <fbm-col
        custom-class="col"
        span="6"
      >
        <van-icon
          name="{{ demoIcon }}"
          size="3rem"
          custom-class="icon"
        />
      </fbm-col>
    </demo-block>
  </fbm-tab>
  <fbm-tab title="基础图标" custom-class="demo-tab-pane">
    <fbm-col
      wx:for="{{ icons.basic }}"
      wx:key="index"
      custom-class="col"
      span="6"
    >
      <van-icon
        name="{{ item }}"
        size="32px"
        custom-class="icon"
      />
      <view class="text">{{ item }}</view>
    </fbm-col>
  </fbm-tab>
  <fbm-tab title="线框风格" custom-class="demo-tab-pane">
    <fbm-col
      wx:for="{{ icons.outline }}"
      wx:key="index"
      custom-class="col"
      span="6"
    >
      <van-icon
        name="{{ item }}"
        size="32px"
        custom-class="icon"
      />
      <view class="text">{{ item }}</view>
    </fbm-col>
  </fbm-tab>
  <fbm-tab title="实底风格" custom-class="demo-tab-pane">
    <fbm-col
      wx:for="{{ icons.filled }}"
      wx:key="index"
      custom-class="col"
      span="6"
    >
      <van-icon
        name="{{ item }}"
        size="32px"
        custom-class="icon"
      />
      <view class="text">{{ item }}</view>
    </fbm-col>
  </fbm-tab>
</fbm-tabs>
