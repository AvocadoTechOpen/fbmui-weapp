<demo-block title="基础用法" padding>
  <fbm-switch
    checked="{{ checked }}"
    bind:change="onChange"
  />
</demo-block>

<demo-block title="禁用状态" padding>
  <fbm-switch
    checked="{{ checked }}"
    disabled
    bind:change="onChange"
  />
</demo-block>

<demo-block title="加载状态" padding>
  <fbm-switch
    checked="{{ checked }}"
    loading
    bind:change="onChange"
  />
</demo-block>

<demo-block title="自定义大小" padding>
  <fbm-switch
    checked="{{ checked }}"
    size="24px"
    bind:change="onChange"
  />
</demo-block>

<demo-block title="自定义颜色" padding>
  <fbm-switch
    checked="{{ checked }}"
    active-color="#07c160"
    inactive-color="#ee0a24"
    bind:change="onChange"
  />
</demo-block>

<demo-block title="异步控制" padding>
  <fbm-switch
    checked="{{ checked2 }}"
    size="36px"
    bind:change="onChange2"
  />
</demo-block>

<fbm-dialog id="fbm-dialog" />
