<demo-block title="基础用法">
  <fbm-submit-bar
    price="{{ 3050 }}"
    button-text="提交订单"
    bind:submit="onClickButton"
    custom-class="fbm-submit-bar"
    safe-area-inset-bottom="{{ false }}"
  />
</demo-block>

<demo-block title="禁用状态">
  <fbm-submit-bar
    disabled
    price="{{ 3050 }}"
    button-text="提交订单"
    tip="您的收货地址不支持同城送, 我们已为您推荐快递"
    tip-icon="info-o"
    bind:submit="onClickButton"
    custom-class="fbm-submit-bar"
    safe-area-inset-bottom="{{ false }}"
  />
</demo-block>

<demo-block title="加载状态">
  <fbm-submit-bar
    loading
    price="{{ 3050 }}"
    button-text="提交订单"
    bind:submit="onClickButton"
    custom-class="fbm-submit-bar"
    safe-area-inset-bottom="{{ false }}"
  />
</demo-block>

<demo-block title="高级用法">
  <fbm-submit-bar
    price="{{ 3050 }}"
    button-text="提交订单"
    bind:submit="onClickButton"
    custom-class="fbm-submit-bar"
    tip="{{ true }}"
    safe-area-inset-bottom="{{ false }}"
  >
    <fbm-tag type="primary" custom-class="submit-tag">标签</fbm-tag>
    <view slot="tip">
      您的收货地址不支持同城送
      <text class="edit-address" bindtap="onClickLink">修改地址</text>
    </view>
  </fbm-submit-bar>
</demo-block>

<fbm-toast id="fbm-toast" />
