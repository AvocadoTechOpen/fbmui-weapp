<demo-block title="基础用法">
  <fbm-circle type="2d" value="{{ value }}" text="{{ value }}%" />
</demo-block>

<demo-block title="样式定制">
  <fbm-circle value="{{ value }}" stroke-width="{{ 6 }}" text="宽度定制" />
  <fbm-circle value="{{ value }}" layer-color="#eee" color="#ee0a24" text="颜色定制" />
  <fbm-circle value="{{ value }}" color="{{ gradientColor }}" text="渐变色" />
  <fbm-circle value="{{ value }}" color="#07c160" clockwise="{{ false }}" text="逆时针" />
  <fbm-circle value="{{ value }}" size="120" text="大小定制" />
</demo-block>

<fbm-button type="primary" size="small" data-step="10" bind:tap="run">增加</fbm-button>
<fbm-button type="danger" size="small" data-step="-10" bind:tap="run">减少</fbm-button>
