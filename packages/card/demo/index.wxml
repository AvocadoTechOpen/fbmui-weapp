<view class="container">
  <demo-block title="基础用法">
    <fbm-card
      num="2"
      price="2.00"
      desc="描述信息"
      title="2018秋冬新款男士休闲时尚军绿飞行夹克秋冬新款男"
      thumb="{{ imageURL }}"
    />
  </demo-block>

  <demo-block title="高级用法">
    <fbm-card
      num="2"
      tag="标签"
      price="2.00"
      origin-price="10.00"
      desc="描述信息"
      title="2018秋冬新款男士休闲时尚军绿飞行夹克秋冬新款男"
      thumb="{{ imageURL }}"
    >
      <view slot="tags">
        <fbm-tag plain type="danger" custom-class="tag">标签1</fbm-tag>
        <fbm-tag plain type="danger">标签2</fbm-tag>
      </view>
      <view slot="footer" class="fbm-card__footer">
        <fbm-button size="mini" round custom-class="button">按钮</fbm-button>
        <fbm-button size="mini" round>按钮</fbm-button>
      </view>
    </fbm-card>
  </demo-block>
</view>
