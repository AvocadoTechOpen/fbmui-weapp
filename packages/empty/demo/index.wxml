<demo-block title="基础用法" padding>
    <fbm-empty description="描述文字" />
</demo-block>

<demo-block title="图片类型">
  <fbm-tabs
    active="{{ activeTab }}"
    bind:change="onChange"
  >
    <fbm-tab title="通用错误">
      <fbm-empty image="error" description="描述文字" />
    </fbm-tab>
    <fbm-tab title="网络错误">
      <fbm-empty image="network" description="描述文字" />
    </fbm-tab>
    <fbm-tab title="搜索提示">
      <fbm-empty image="search" description="描述文字" />
    </fbm-tab>
  </fbm-tabs>
</demo-block>

<demo-block title="自定义图片" padding>
  <fbm-empty
    custom-class="custom-image"
    image="https://img.yzcdn.cn/vant/custom-empty-image.png"
    description="描述文字"
  />
</demo-block>

<demo-block title="底部内容" padding>
  <fbm-empty description="描述文字">
    <fbm-button round type="danger" custom-class="bottom-button">
      按钮
    </fbm-button>
  </fbm-empty>
</demo-block>
